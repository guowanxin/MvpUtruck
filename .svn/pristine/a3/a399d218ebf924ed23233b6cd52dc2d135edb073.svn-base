<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:orientation="vertical">

        <View
            style="@style/line_style"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_gravity="center|bottom"
            android:background="#ffffff"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_tab_shouye"
                style="@style/bottomTab">

                <ImageView
                    android:id="@+id/iv_tab_shouye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/shouye"/>

                <TextView
                    android:id="@+id/tv_tab_shouye"
                    style="@style/HomeTabText"
                    android:text="首页" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_tab_order"
                style="@style/bottomTab">

                <ImageView
                    android:id="@+id/iv_tab_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/shouye_order"/>

                <TextView
                    android:id="@+id/tv_tab_order"
                    style="@style/HomeTabText"
                    android:text="运单" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_tab_my"
                style="@style/bottomTab">

                <ImageView
                    android:id="@+id/iv_tab_my"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/shouye_wode"/>

                <TextView
                    android:id="@+id/tv_tab_my"
                    style="@style/HomeTabText"
                    android:textColor="@color/tab_text"
                    android:text="我的" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>