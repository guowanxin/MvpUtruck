<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#00000000"
    android:layout_weight="1"
    >
    <LinearLayout
        android:id="@+id/dialog_common_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_corners_white">

        <LinearLayout
            android:id="@+id/ll_dialog_common_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dialog_common_msg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textSize="18dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dialog_common_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            >
            <Button
                android:id="@+id/dialog_common_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_dialog_common_cancel"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/bg_item_right_top"/>
            <Button
                android:id="@+id/dialog_common_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_dialog_common_confirm"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/bg_item_left_top"

                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_dialog_common_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            >
        </LinearLayout>
    </LinearLayout>
</LinearLayout>