<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/title_background">
        <LinearLayout
            android:id="@+id/ll_setting"
            android:layout_width="80px"
            android:layout_height="60px"
            android:layout_marginRight="10px"
            android:layout_gravity="right"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/my_setting"/>
        </LinearLayout>
        <tdh.ifm.android.imatch.app.ui.view.CircleImageView
            android:id="@+id/iv_touxiang"
            android:layout_width="110px"
            android:layout_height="110px"
            android:layout_marginTop="10px"
            android:src="@color/white"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:gravity="bottom">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三"
                android:textColor="@color/white"
                android:textSize="38px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="34px" />
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18625874562"
                android:textColor="@color/white"
                android:textSize="28px" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:layout_marginBottom="40px"
            android:gravity="bottom">
            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1030"
                android:textColor="@color/white"
                android:textSize="38px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:text="次交易"
                android:textColor="@color/white"
                android:textSize="28px" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_wallet"
        android:layout_marginTop="20px"
        style="@style/my_style">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_wallet"
            android:layout_marginLeft="40px"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            android:textSize="28px"
            android:textColor="@color/text_normal"
            android:text="我的钱包"/>
    </LinearLayout>
    <View
        style="@style/line_style"/>
    <LinearLayout
        android:id="@+id/ll_member_info"
        android:layout_marginTop="20px"
        style="@style/my_style">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_member_info"
            android:layout_marginLeft="40px"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            android:textSize="28px"
            android:textColor="@color/text_normal"
            android:text="会员信息"/>
    </LinearLayout>
    <View
        style="@style/line_style"/>
    <LinearLayout
        android:id="@+id/ll_attention_line"
        android:layout_marginTop="20px"
        style="@style/my_style">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_attention_line"
            android:layout_marginLeft="40px"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            android:textSize="28px"
            android:textColor="@color/text_normal"
            android:text="关注线路"/>
    </LinearLayout>
    <View
        style="@style/line_style"/>
    <LinearLayout
        android:id="@+id/ll_friend"
        android:layout_marginTop="20px"
        style="@style/my_style">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_friend"
            android:layout_marginLeft="40px"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            android:textSize="28px"
            android:textColor="@color/text_normal"
            android:text="我的好友"/>
    </LinearLayout>
    <View
        style="@style/line_style"/>
    <LinearLayout
        android:id="@+id/ll_message"
        android:layout_marginTop="20px"
        style="@style/my_style">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_message"
            android:layout_marginLeft="40px"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            android:textSize="28px"
            android:textColor="@color/text_normal"
            android:text="我的消息"/>
    </LinearLayout>
    <View
        style="@style/line_style"/>
</LinearLayout>