<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:background="@color/title_background"
        android:orientation="horizontal"
        android:padding="15px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            >


            <TextView
            android:text="@string/txt_member_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
                android:textSize="30px"
                android:padding="15px"
                android:gravity="bottom"
                android:textColor="@color/white"/>
            <TextView
                android:text="初级会员"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_member_level"
                android:layout_weight="1"
                android:textSize="60px"
                android:padding="15px"
                android:textColor="@color/yellow"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="3">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:src="@drawable/ic_launcher">



        </ImageView>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30px">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="57px">

            <LinearLayout
                android:layout_width="6px"
                android:layout_height="30px"
                android:paddingRight="13px"
                android:background="@color/blue"
android:textSize="30px"
                 />
            <TextView
                android:text="@string/txt_primary_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:paddingLeft="12px"
                android:textSize="30px"
                android:textColor="@color/text_prompt"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="19px">


            <TextView
                android:textSize="28px"
                android:text="是非成败转头空，青山依旧在，惯看秋月春风。一壶浊酒喜相逢，古今多少事，滚滚长江东逝水，浪花淘尽英雄。 几度夕阳红。白发渔樵江渚上，都付笑谈中。 滚滚长江东逝水，浪花淘尽英雄。是非成败转头空，青山依旧在，几度夕阳红。白发渔樵江渚上"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:textColor="@color/text_list"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="57px">

            <LinearLayout
                android:layout_width="6px"
                android:layout_height="30px"
                android:paddingRight="13px"
                android:background="@color/blue"
                android:textSize="30px"
                />
            <TextView
                android:text="@string/txt_advanced_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12px"
                android:textSize="30px"
                android:textColor="@color/text_prompt"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="19px">


            <TextView
                android:textSize="28px"
                android:text="是非成败转头空，青山依旧在，惯看秋月春风。一壶浊酒喜相逢，古今多少事，滚滚长江东逝水，浪花淘尽英雄。 几度夕阳红。白发渔樵江渚上，都付笑谈中。 滚滚长江东逝水，浪花淘尽英雄。是非成败转头空，青山依旧在，几度夕阳红。白发渔樵江渚上"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_list"
                android:layout_weight="1" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_get_advanced_member"
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:layout_marginTop="102px"
            android:background="@drawable/btn_bg"
            android:text="@string/btn_get_advanced_member"
            android:textColor="@color/white"
            android:textSize="36px"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>